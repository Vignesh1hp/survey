<tvsm-modal
  [isOpen]="isOpen"
  (closed)="close()"
  [title]="title"
  size="lg"
  class="custom-modal-width"
>
  <div class="modal-content-wrap">
    <div class="coaching-history">
      <h5 class="inner-title mb-3">
        {{ coach?.coachDetails?.specialization?.name || 'Physical wellbeing' }} Coaching History
        <span class="color-green ms-5">Compliance : {{ getComplianceDisplay() }}</span>
      </h5>

      @if (isCoach && coach && canCreateRecommendation) {
        <!-- Editable Session Card -->
        <div class="dashboard-card mb-4 p-0">
          <div class="dashboard-card-body">
            <div class="recommendation-header d-flex justify-content-between align-items-center">
              <div class="coach-details d-flex align-items-center gap-3">
                <div class="d-flex align-items-center gap-2">
                  <img src="assets/images/male-icon.svg" alt="Coach Avatar" class="coach-avatar" />
                  <div class="coach-info-text">
                    <h5 class="coach-name m-0">
                      {{ employee?.name }}
                    </h5>
                    <p class="coach-contact m-0">{{ employee?.email || '' }}</p>
                  </div>
                </div>
                <!-- <div class="coach-rating ms-2 text-warning align-self-start">
                  {{ coach.coachDetails?.rating || 0 }} <i class="bi bi-star-fill"></i>
                </div> -->
              </div>

              <div class="text-end">
                <div class="recommendation-count">
                  {{ recommendations.length + 1 }}/{{ recommendations.length + 1 }}
                </div>
                <p class="recommendation-date">{{ editableSession.date }}</p>
              </div>
            </div>

            <div class="recommendation-body">
              <div class="rfl-wrap">
                <div class="row">
                  <div class="col-md-4">
                    <label class="rfl-label">Advice Given</label>
                  </div>
                  <div class="col-md-3">
                    <label class="rfl-label">Frequency</label>
                  </div>
                  <div class="col-md-4">
                    <label class="rfl-label">Remarks</label>
                  </div>
                </div>
              </div>
              <form #adviceForm="ngForm" (ngSubmit)="onSubmit(adviceForm)">
                @for (advice of editableSession.advices; track $index) {
                  <div class="row g-2 align-items-center mb-3">
                    <div class="col-md-4">
                      <tvsm-form-field-wrapper
                        label=""
                        for="text"
                        [required]="true"
                        [error]="formErrors[advice.text] || ''"
                      >
                        <tvsm-input
                          type="text"
                          name="advice_{{ $index }}"
                          id="advice_{{ $index }}"
                          placeholder="Advice"
                          [(ngModel)]="advice.text"
                        ></tvsm-input>
                      </tvsm-form-field-wrapper>
                      @if (adviceForm.submitted && (!advice.text || advice.text.length > 250)) {
                        <small class="text-danger">Required (max 250 chars)</small>
                      }
                    </div>
                    <div class="col-md-3">
                      <tvsm-form-field-wrapper
                        label=""
                        for="frequency"
                        [required]="true"
                        [error]="formErrors[advice.frequency] || ''"
                      >
                        <tvsm-input
                          type="text"
                          name="frequency_{{ $index }}"
                          id="frequency_{{ $index }}"
                          placeholder="Frequency"
                          [(ngModel)]="advice.frequency"
                        ></tvsm-input>
                      </tvsm-form-field-wrapper>

                      @if (
                        adviceForm.submitted && (!advice.frequency || advice.frequency.length > 250)
                      ) {
                        <small class="text-danger">Required (max 250 chars)</small>
                      }
                    </div>
                    <div class="col-md-4">
                      <tvsm-form-field-wrapper
                        label=""
                        for="comment"
                        [required]="true"
                        [error]="formErrors[advice.comment] || ''"
                      >
                        <tvsm-input
                          type="text"
                          name="comment_{{ $index }}"
                          id="comment_{{ $index }}"
                          placeholder="Comment"
                          [(ngModel)]="advice.comment"
                        ></tvsm-input>
                      </tvsm-form-field-wrapper>
                      @if (
                        adviceForm.submitted && (!advice.comment || advice.comment.length > 250)
                      ) {
                        <small class="text-danger">Required (max 250 chars)</small>
                      }
                    </div>
                    <div class="col-md-1 text-center d-flex align-items-center">
                      @if (editableSession.advices.length > 1) {
                        <button
                          class="btn-flag btn-flag--remove me-1"
                          type="button"
                          (click)="removeAdvice($index)"
                        >
                          <i class="bi bi-dash-lg"></i>
                        </button>
                      }
                      @if ($last) {
                        <button class="btn-flag btn-flag--add" type="button" (click)="addAdvice()">
                          <i class="bi bi-plus-lg"></i>
                        </button>
                      }
                    </div>
                  </div>
                }

                <div class="text-end mt-3">
                  <tvsm-button variant="primary" type="submit" [disabled]="isSubmitting">
                    {{ isSubmitting ? 'Submitting...' : 'Submit' }}
                  </tvsm-button>
                </div>
              </form>
            </div>
          </div>
        </div>
      }

      <!-- Previous Session (Read-only) -->
      @if (coach) {
        @for (session of recommendations; track session.id; let i = $index) {
          <div class="dashboard-card mb-4 p-0">
            <app-recommendation-list
              [session]="session"
              [sessionLength]="
                canCreateRecommendation && isCoach
                  ? recommendations.length
                  : recommendations.length - 1
              "
              [index]="canCreateRecommendation && isCoach ? i : i - 1"
              [sessionId]="session.id"
            ></app-recommendation-list>
          </div>
        }
      }
    </div>
  </div>
</tvsm-modal>
